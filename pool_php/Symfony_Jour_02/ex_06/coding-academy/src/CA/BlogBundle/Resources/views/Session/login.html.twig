{% extends "::base.html.twig" %}

{% block title %}CABlogBundle:Session:login{% endblock %}

{% block body %}
<h1>Welcome to the Session:login page</h1>
    {% if error  %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <form method="post" action="{{ path('login_check') }}">
        <input name="_username" type="text" placeholder="Username" required>
        <input name="_password" type="text" placeholder="Password" required>
        <input type="submit" name="Login">
    </form>
{% endblock %}
